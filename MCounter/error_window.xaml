<Window x:Class="MCounter.error_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCounter"
        mc:Ignorable="d"
        Title="Error" Height="120" Width="210" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <Border BorderBrush="Red" BorderThickness="5">
            <TextBlock x:Name="error_text" Text="Ошибка:" Background="LightGray" FontSize="14" FontStyle="Italic" FontFamily="cursive" TextWrapping="Wrap" Margin="3"/>
        </Border>
        
        
    </Grid>
</Window>
